<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:padding="5dp"
             android:id="@+id/idItemsearch"
             android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCasiSearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/app_icon1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgCasiSearch"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_baihatSearch"
            android:text="namecasi"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txt_casiSearch"
            android:text="namecasi"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>